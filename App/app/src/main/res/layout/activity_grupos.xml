<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.GruposActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/buttonUnirseAGrupo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Unirse a un grupo"
        android:layout_gravity="center"
        android:background="@drawable/button_round_purple"/>

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Puedes crear un grupo haciendo click debajo"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15sp"
        android:gravity="center"
        android:text="Nombre o asunto del grupo"
        android:textSize="22sp"
        android:textColor="#000000"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextNameGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15sp"
            android:layout_marginStart="15sp"
            android:layout_weight="1"
            android:inputType="text"
            android:padding="5sp"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="10sp"
            android:src="@drawable/pencil" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonCrearGrupo"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/button_round"
        android:layout_gravity="center"
        android:text="Crear grupo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="O editar un grupo" />

    <ListView
        android:id="@+id/listViewGroups"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        ></ListView>

    <Button
        android:id="@+id/buttonEditGroup"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Editar grupo"
        android:background="@drawable/button_round"/>

</LinearLayout>